<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modelo.admo.gestion_clientes.GestionClientes">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:paddingBottom="20dp"
        app:srcCompat="@drawable/logotipo_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAltaCliente"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:backgroundTint="#781E4B"
            android:onClick="clickBotonAltaCliente"
            android:text="Alta Cliente"
            android:textSize="24sp"
            app:cornerRadius="5dp"/>

        <Button
            android:id="@+id/btnVerClientes"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:backgroundTint="#781E4B"
            android:onClick="clickBotonVerClientes"
            android:text="Ver Clientes"
            android:textSize="24sp"
            app:cornerRadius="5dp"/>

        <Button
            android:id="@+id/btnModificarCliente"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:backgroundTint="#781E4B"
            android:onClick="clickBotonModificarCliente"
            android:text="Modificar Cliente"
            android:textSize="24sp"
            app:cornerRadius="5dp"/>
    </LinearLayout>

</LinearLayout>