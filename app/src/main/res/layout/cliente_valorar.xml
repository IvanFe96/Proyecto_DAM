<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/estilo_fondo"
    tools:context=".modelo.cliente.Valorar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewValorar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="100dp"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/logotipo_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTrabajadorValorar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    app:srcCompat="@drawable/ic_launcher_foreground" />

                <RatingBar
                    android:id="@+id/ratingBarValorar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/btnAceptarValorar"
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:onClick="clickBotonAceptar"
                    android:text="Aceptar"
                    android:textSize="24sp"
                    app:cornerRadius="5dp"
                    style="@style/EstiloBoton"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>