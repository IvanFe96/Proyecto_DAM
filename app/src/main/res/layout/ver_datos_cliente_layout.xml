<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/EstiloListas"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewVerClientes"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tvVerClientesNombreApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EstiloTextView"
            android:text="Nombre"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvVerClientesTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EstiloTextView"
            android:text="Telefono"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvVerClientesCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EstiloTextView"
            android:text="Correo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvVerClientesDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EstiloTextView"
            android:text="Direccion"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>