<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estilo_fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewIncidencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/logotipo_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinnerIncidencia"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    style="@style/EstiloDesplegables"/>

                <EditText
                    android:id="@+id/editTextMultilineDescripcionIncidencia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:inputType="textMultiLine"
                    android:hint="Ingrese su comentario aquÃ­..."
                    android:background="@drawable/estilo_background_campos_texto"/>

                <Button
                    android:id="@+id/btnGuardarIncidencia"
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#781E4B"
                    android:onClick="clickBotonGuardarIncidencia"
                    android:text="Guardar"
                    android:textSize="24sp"
                    app:cornerRadius="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>