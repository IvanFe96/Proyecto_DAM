<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estilo_fondo"
    android:orientation="vertical"
    tools:context=".modelo.cliente.EleccionCliente">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewEleccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="100dp"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/logotipo_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegistrarNecesidadesEleccion"
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#781E4B"
                    android:onClick="clickBotonRegistrarNecesidades"
                    android:text="Registrar Necesidades"
                    android:textSize="24sp"
                    app:cornerRadius="5dp"/>

                <Button
                    android:id="@+id/btnValorarEleccion"
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#781E4B"
                    android:onClick="clickBotonValorar"
                    android:text="Valorar"
                    android:textSize="24sp"
                    app:cornerRadius="5dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>